    <script>
        // 1. DATA (Encoded or generic names to avoid filter triggers)
        const apps = [
            { id: "g1", name: "Simulation_01", icon: "ðŸš€", url: "https://example.com/game1" },
            { id: "g2", name: "Logic_Engine", icon: "ðŸ§©", url: "https://example.com/game2" },
            { id: "g3", name: "Vector_Physics", icon: "ðŸŽï¸", url: "https://example.com/game3" }
        ];

        const grid = document.getElementById('app-grid');
        apps.forEach(app => {
            grid.innerHTML += `
                <div class="item" onclick="openApp('${app.url}')">
                    <div class="preview">${app.icon}</div>
                    <div class="info">${app.name}</div>
                </div>
            `;
        });

        // 2. CLOAKING LOGIC
        function cloakTab() {
            document.getElementById('tab-title').innerText = "Google Classroom";
            document.getElementById('tab-icon').href = "https://ssl.gstatic.com/classroom/favicon.png";
            alert("Tab Identity Obfuscated.");
        }

        // 3. THE ABOUT:BLANK LAUNCHER
        function launchBlank() {
            const win = window.open();
            if (!win || win.closed) {
                alert("Popup Blocked! Please allow popups for testing.");
                return;
            }
            
            const url = window.location.href;
            const style = "margin:0; height:100vh; width:100vw; overflow:hidden;";
            
            win.document.body.innerHTML = `
                <iframe src="${url}" style="border:none; width:100%; height:100%;" frameborder="0"></iframe>
            `;
            win.document.body.style = style;
            
            // Redirect current page to something boring
            window.location.replace("https://www.wikipedia.org");
        }

        function openApp(url) {
            console.log("Loading module: " + url);
            // In a real app, this would load the game into a fullscreen iframe
        }
    </script>
